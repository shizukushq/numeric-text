{
  "name": "numeric-text",
  "private": true,
  "scripts": {
    "build": "bun run --filter './packages/*' build",
    "dev": "bun run --filter './packages/*' dev",
    "format": "prettier --write .",
    "ci:version": "changeset version && bun update && git add --all",
    "ci:publish": "for dir in packages/*; do (cd \"$dir\" && bun publish || true); done && changeset tag",
    "size": "bun run build && bun scripts/size.ts"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@types/bun": "latest",
    "prettier": "^3.8.1",
    "prettier-plugin-svelte": "^3.4.1",
    "typescript": "^5"
  },
  "workspaces": [
    "packages/*"
  ]
}
